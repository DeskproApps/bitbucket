{
  "name": "@deskpro-apps/bitbucket",
  "title": "Bitbucket",
  "description": "View and edit your Bitbucket issues when interacting with related Deskpro tickets",
  "version": "0.0.8",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "entityAssociations": {
    "linkedBitbucketIssue": {
      "title": "Linked Bitbucket Issue",
      "entity": "ticket",
      "type": "external_id"
    }
  },
  "settings": {
    "key": {
      "title": "Key",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "secret": {
      "title": "Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback" },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 30
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://api.bitbucket.org/.*",
        "methods": ["GET", "POST", "PUT"],
        "timeout": 20
      },
      {
        "url": "https://bitbucket.org/site/oauth2/.*",
        "methods": ["POST"],
        "timeout": 20
      }
    ]
  }
}
